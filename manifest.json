{
  "manifest_version": 3,
  "name": "Add to Cart Clicker",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
